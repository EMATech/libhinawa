#!/usr/bin/env python3

from sys import exit
from errno import ENXIO

from helper import test

import gi
gi.require_version('Hinawa', '2.0')
from gi.repository import Hinawa

target = Hinawa.SndUnit()
props = (
    'type',
    'card',
    'device',
    'streaming',
    'guid',
)
methods = (
    'new',
    'open',
    'lock',
    'unlock',
)
vmethods = (
    'do_lock_status',
    'do_disconnected',
)
signals = (
    'lock-status',
    'disconnected',
)

if not test(target, props, methods, vmethods, signals):
    exit(ENXIO)
